{% extends 'home.html.twig' %}

{% block title %}Liste des emprunts{% endblock %}

{% block body %}
    <h1 class="mb-4">Liste des emprunts</h1>

    {# Bouton pour créer un nouvel emprunt #}
    <div class="mb-3">
        <a href="{{ path('app_emprunt_new') }}" class="btn btn-success">
        Créer un nouvel emprunt
        </a>
    </div>

    {# Table responsive avec Bootstrap #}
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom d'œuvre</th>
                    <th>Date d'emprunt</th>
                    <th>Date de retour</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for emprunt in emprunts %}
                <tr>
                    <td>{{ emprunt.id }}</td>
                    <td><strong>{{ emprunt.bookid.title }}</strong></td>
                    <td>{{ emprunt.borrowingDate ? emprunt.borrowingDate|date('d/m/Y') : '-' }}</td>
                    <td>{{ emprunt.returningDate ? emprunt.returningDate|date('d/m/Y') : '-' }}</td>
                    <td>
                        {% if emprunt.status %}
                            <span class="badge bg-warning text-dark">En cours d'emprunt</span>
                        {% else %}
                            <span class="badge bg-success">Retourné</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_emprunt_show', {'id': emprunt.id}) }}" class="btn btn-sm btn-info">
                            Voir
                        </a>
                        <a href="{{ path('app_emprunt_edit', {'id': emprunt.id}) }}" class="btn btn-sm btn-warning">
                            Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center text-muted">
                        Aucun emprunt trouvé
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
