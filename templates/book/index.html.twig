{% extends 'home.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Liste des oeuvres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom d'oeuvre</th>
                <th>Type</th>
                <th>Auteur</th>
                <th>Année</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.type }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.year ? book.year|date('Y-m-d') : '' }}</td>
                <td>{{ book.description }}</td>
                <td> <img src="{{ asset('uploads/' ~ book.image) }}" alt="{{ book.title }}" width="150"> </td>
                <td>
                    <a href="{{ path('app_book_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('app_book_edit', {'id': book.id}) }}">edit</a>
                </td>
                <td> 
                    {% for emprunt in book.emprunts %}
                        {{ emprunt.status ? 'Emprunt' : 'Retour' }}
                    {% endfor %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_book_new') }}">Créer un nouveau</a>

    <div>
        {% if page > 1 %}
            <a href="{{ path('app_book_index', {page: page - 1}) }}"> Page précédente </a>
        {% endif %}

        {% if page < maxPages %}
            <a href="{{ path('app_book_index', {page: page + 1}) }}"> Page suivante </a>
        {% endif %}
    </div>
{% endblock %}
