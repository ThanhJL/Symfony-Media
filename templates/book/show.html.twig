{% extends 'home.html.twig' %}

{% block title %}D√©tails de l'≈ìuvre{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h1 class="mb-4">{{ book.title }}</h1>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            {% if book.image %}
                                <img src="{{ asset('uploads/' ~ book.image) }}" 
                                    alt="{{ book.title }}" 
                                    class="img-fluid rounded">
                            {% else %}
                                <div class="bg-light p-5 text-center rounded">
                                    <p class="text-muted">Pas d'image</p>
                                </div>
                            {% endif %}
                        </div>
                        
                        <div class="col-md-8">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Type:</th>
                                        <td>{{ book.type }}</td>
                                    </tr>
                                    <tr>
                                        <th>Auteur:</th>
                                        <td>{{ book.author }}</td>
                                    </tr>
                                    <tr>
                                        <th>Ann√©e:</th>
                                        <td>{{ book.year ? book.year|date('Y') : '-' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Statut:</th>
                                        <td>
                                            {% if book.isCurrentlyBorrowed %}
                                                <span class="badge bg-warning text-dark">Emprunt√©</span>
                                            {% else %}
                                                <span class="badge bg-success">Disponible</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <h5 class="mt-3">Description:</h5>
                            <p>{{ book.description }}</p>
                        </div>
                    </div>
                </div>
            </div>

            {# Afficher le dernier emprunt #}
            {% set lastEmprunt = book.lastEmprunt %}
            {% if lastEmprunt %}
                <div class="card mt-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">üìö Dernier emprunt</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Date d'emprunt:</strong> {{ lastEmprunt.borrowingDate|date('d/m/Y') }}</p>
                        <p><strong>Date de retour pr√©vue:</strong> {{ lastEmprunt.returningDate|date('d/m/Y') }}</p>
                        <p>
                            <strong>Statut:</strong> 
                            {% if lastEmprunt.status %}
                                <span class="badge bg-warning text-dark">En cours</span>
                            {% else %}
                                <span class="badge bg-success">Retourn√©</span>
                            {% endif %}
                        </p>
                        {% if lastEmprunt.user %}
                            <p><strong>Emprunt√© par:</strong> {{ lastEmprunt.user.email }}</p>
                        {% endif %}
                    </div>
                </div>
            {% endif %}

            {# Historique des emprunts #}
            {% if book.emprunts|length > 0 %}
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">üìã Historique des emprunts ({{ book.emprunts|length }})</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date d'emprunt</th>
                                        <th>Date de retour</th>
                                        <th>Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for emprunt in book.emprunts %}
                                        <tr>
                                            <td>{{ emprunt.borrowingDate|date('d/m/Y') }}</td>
                                            <td>{{ emprunt.returningDate|date('d/m/Y') }}</td>
                                            <td>
                                                {% if emprunt.status %}
                                                    <span class="badge bg-warning text-dark">En cours</span>
                                                {% else %}
                                                    <span class="badge bg-success">Retourn√©</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endif %}

            <div class="mt-4">
                <a href="{{ path('app_book_index') }}" class="btn btn-secondary">
                    ‚Üê Retour √† la liste
                </a>

            </div>
        </div>
    </div>
{% endblock %}